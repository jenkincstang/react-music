//}

.fade-exit {
  opacity: 1;
  z-index: 20;
  transform: translate3d(0, 0, 0)
}

.fade-exit-active {
  opacity: 0;
  transform: translate3d(100%, 0, 0)
  transition: all 300ms;
}

