@import "../../common/stylus/variable"
@import "../../common/stylus/mixin"


.music-list
  position: fixed
  z-index: 100
  top: 0
  left: 0
  bottom: 0
  right: 0
  background: $color-background

  .music-list-header
    height: 40px;
    position: absolute;
    width: 100vw;
    filter: drop-shadow(2px 4px 6px black);
    background-color: #7f7f7f1c;
    z-index: 1;

  .music-list-scroll {
    height: calc(100vh - 60px)
  }

  .back
    position absolute
    top: 0
    left: 6px
    z-index: 50

    .icon-back
      display: block
      padding: 10px
      font-size: $font-size-large-x
      color: $color-theme

  .title
    position: absolute
    top: 0
    left: 10%
    z-index: 40
    width: 80%
    no-wrap()
    text-align: center
    line-height: 40px
    font-size: $font-size-large
    color: $color-text

  .bg-image
    position: relative
    //width: 100%
    height: 0
    padding-top: 70%
    transform-origin: top
    background-size: cover
    background-position: center;

  .no-bg-image {
    padding: 10px !important;
    background: #292929;
  }

  @media screen and (min-width: 600px) {
    .bg-image {
      //padding-top: 40%
      padding-top: 40%;
      margin: 0 20%;
    }
  }

  @media screen and (min-width: 900px) {
    .bg-image {
      //padding-top: 10%
      padding-top: 20%;
      margin: 0 20%;
    }
  }


  .play-wrapper
    position: absolute
    bottom: 20px
    z-index: 50
    width: 100%

    .play
      box-sizing: border-box
      width: 135px
      padding: 7px 0
      margin: 0 auto
      text-align: center
      border: 1px solid $color-theme
      color: $color-theme
      border-radius: 100px
      font-size: 0
      background-color #00000026

      .icon-play
        display: inline-block
        vertical-align: middle
        margin-right: 6px
        font-size: $font-size-medium-x

      .text
        display: inline-block
        vertical-align: middle
        font-size: $font-size-small

  .filter
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: rgba(7, 17, 27, 0.4)

  .bg-layer
    position: relative
    height: 100%
    background: $color-background

  .list
    top: 0
    bottom: 0
    width: 100%
    background: $color-background

    .song-list-wrapper
      padding: 20px 30px

      .loading-more {
        text-align: center;
        padding: 10px 0px;
        border: 1px solid white;
        border-radius: 6px;
      }

      .list-no-result {
        text-align: center;
        padding-top: 30%;
        color: rgba(255, 255, 255, 0.5);
      }

    .loading-container
      position: absolute
      width: 100%
      top: 50%
      transform: translateY(-50%)