@import "../../common/stylus/variable"

.search-box
  display: flex
  align-items: center
  box-sizing: border-box
  width: 100%
  padding: 0 6px
  height: 40px
  background: $color-highlight-background
  border-radius: 6px

  .icon-search
    font-size: 24px
    color: rgba(255, 255, 255, 0.3)

  .box
    flex: 1
    margin: 0 5px
    line-height: 18px
    background: $color-highlight-background
    color: $color-text
    font-size: $font-size-medium
    outline: none;


    &::placeholder
      color: $color-text-d

  .icon-dismiss
    font-size: 16px
    margin-right:5px;
    color: $color-background


  .search-button {
    padding: 6px 12px;
    background: #222222;
    color: #8c8c8c;
    border-radius: 8px;
    outline: none;
    border: none;
  }