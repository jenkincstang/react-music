@import "../common/stylus/variable.styl"

.router-wrapper {
  overflow: hidden;
  position relative
  left 0
  top 0
  right 0
  bottom 0
  height: 300px;
}

.router-route {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  z-index: 20
}

.fade-enter {
  opacity: 0;
  z-index: 20;
  transform: translate3d(100%, 0, 0);
}

.fade-enter-active {
  opacity: 1;
  z-index: 20;
  transform: translate3d(0, 0, 0)
  transition: all 300ms;
}


